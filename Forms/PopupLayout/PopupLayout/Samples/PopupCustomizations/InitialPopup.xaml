<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.SfPopupLayout.InitialPopup"
             xmlns:popuplayout="clr-namespace:Syncfusion.XForms.PopupLayout;assembly=Syncfusion.SfPopupLayout.XForms">
  <ContentView.Content>
        <popuplayout:SfPopupLayout x:Name="popup" StaysOpen="True">
            <popuplayout:SfPopupLayout.PopupView>
                <popuplayout:PopupView ShowFooter="False" HeaderTitle="Book Tickets !" HeightRequest="130">
                    <popuplayout:PopupView.ContentTemplate>
                        <DataTemplate>
                            <Grid BackgroundColor="White" Padding="10,10,10,10">
                            <Label FontSize="14"  BackgroundColor="White" TextColor="Black" Text="Click on the book button to start booking tickets"/>
                            </Grid>
                        </DataTemplate>
                    </popuplayout:PopupView.ContentTemplate>
                </popuplayout:PopupView>
            </popuplayout:SfPopupLayout.PopupView>
        </popuplayout:SfPopupLayout>
    </ContentView.Content>
</ContentView>