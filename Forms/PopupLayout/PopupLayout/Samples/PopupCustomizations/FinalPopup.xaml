<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.SfPopupLayout.FinalPopup"
             xmlns:popuplayout="clr-namespace:Syncfusion.XForms.PopupLayout;assembly=Syncfusion.SfPopupLayout.XForms">
    <ContentView.Content>
            <popuplayout:SfPopupLayout x:Name="popup">
                <popuplayout:SfPopupLayout.PopupView>
                    <popuplayout:PopupView ShowCloseButton="False" HeightRequest="130" AcceptButtonText="OK" HeaderTitle="Thank You !">
                        <popuplayout:PopupView.ContentTemplate>
                            <DataTemplate>
                            <Grid Padding="10,0,0,0" BackgroundColor="White">
                                <Label Text="Tickets booked successfully" FontSize="15" BackgroundColor="White" TextColor="Black"></Label>
                            </Grid>
                            </DataTemplate>
                        </popuplayout:PopupView.ContentTemplate>
                    </popuplayout:PopupView>
                </popuplayout:SfPopupLayout.PopupView>
            </popuplayout:SfPopupLayout>
        </ContentView.Content>
</ContentView>