    </Compile>
  </ItemGroup>
  
  <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />
    <PropertyGroup>
    <PrepareResourceNamesDependsOn>
      IncludeFilesInDroid;
      $(PrepareResourceNamesDependsOn)
    </PrepareResourceNamesDependsOn>
  </PropertyGroup>
  <Target BeforeTargets="BeforeBuild" Name="IncludeFilesInDroid">
    <RemoveDir Directories="..\DataGrid.Android\Resources\CodeFiles\" />
    <RemoveDir Directories="..\DataGrid.iOS\Resources\CodeFiles\" />
	<RemoveDir Directories="..\DataGrid.macOS\Resources\CodeFiles\" />
    <RemoveDir Directories="..\DataGrid.UWP\Resources\CodeFiles\" />
    <ItemGroup>
      <SourceResourceFiles Include="Samples\**\*">
        <DroidFiles>..\DataGrid.Android\Resources\CodeFiles\</DroidFiles>
        <iOSFiles>..\DataGrid.iOS\Resources\CodeFiles\</iOSFiles>
	<macOSFiles>..\DataGrid.macOS\Resources\CodeFiles\</macOSFiles>
        <UWPFiles>..\DataGrid.UWP\Resources\CodeFiles\</UWPFiles>
      </SourceResourceFiles>
    </ItemGroup>
    <Copy SourceFiles="@(SourceResourceFiles)" DestinationFolder="%(DroidFiles)\%(RecursiveDir)" />
    <Copy SourceFiles="@(SourceResourceFiles)" DestinationFolder="%(iOSFiles)\%(RecursiveDir)" />
    <Copy SourceFiles="@(SourceResourceFiles)" DestinationFolder="%(UWPFiles)\%(RecursiveDir)" />
    <Copy SourceFiles="@(SourceResourceFiles)" DestinationFolder="%(macOSFiles)\%(RecursiveDir)" />
  </Target>
